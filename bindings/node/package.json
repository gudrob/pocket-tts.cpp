{
  "name": "@pocket-tts/pocket-tts",
  "version": "0.1.0",
  "description": "Node.js N-API bindings for pocket-tts-cpp",
  "license": "MIT",
  "main": "index.js",
  "gypfile": true,
  "engines": {
    "node": ">=24"
  },
  "binary": {
    "napi_versions": [
      8
    ]
  },
  "scripts": {
    "build": "node-gyp rebuild",
    "rebuild": "node-gyp rebuild --verbose",
    "prebuild": "prebuildify --napi --strip --tag-libc --target 24.14.0",
    "clean": "node-gyp clean",
    "install": "node-gyp-build || node-gyp rebuild"
  },
  "dependencies": {
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "node-addon-api": "^8.3.0",
    "node-gyp": "^11.1.0",
    "prebuildify": "^6.0.1"
  }
}
